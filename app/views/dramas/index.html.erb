<p id="notice"><%= notice %></p>

<h1>Dramas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Episode</th>
      <th>Director</th>
      <th>Actor</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dramas.each do |drama| %>
      <tr>
        <td><%= image_tag drama.image.url(:medium) %></td>
        <td><%= drama.title %></td>
        <td><%= drama.description %></td>
        <td><%= drama.episode %></td>
        <td><%= drama.director %></td>
        <td><%= drama.actor %></td>
        <td><%= drama.rating %></td>
        <td><%= link_to 'Show', drama %></td>
        <td><%= link_to 'Edit', edit_drama_path(drama) %></td>
        <td><%= link_to 'Destroy', drama, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

